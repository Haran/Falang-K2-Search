<?xml version="1.0" encoding="UTF-8"?>
<install version="0.9" type="plugin" group="search">
    <name>Search - K2 - Falang</name>
    <author>Oļegs Čapligins</author>
    <creationDate>2013-03-21</creationDate>
    <copyright>Oļegs Čapligins</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <authorEmail>shader@dautkom.lv</authorEmail>
    <authorUrl>http://localhost</authorUrl>
    <version>0.9.0</version>
    <description>Enables searching in K2 items translated by Falang</description>
    <files>
        <filename plugin="falangK2">falangK2.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text" size="5" default="50"
                       label="Search Limit"
                       description="Number of search items to return"/>
                <field name="@spacer" type="spacer" default="" label="" description="" />
                <field name="active_language_only" type="radio" default="1"
                       label="Active language only"
                       description="Search only within active language?">
                    <option value="0">No</option>
                    <option value="1">Yes</option>
                </field>
            </fieldset>
        </fields>
    </config>
</install>